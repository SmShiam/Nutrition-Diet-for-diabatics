<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/interface_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/sign_up"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/interface_button"
        android:elevation="20dp"
        android:fontFamily="@font/nikosh"
        android:letterSpacing=".05"
        android:padding="10dp"
        android:text="@string/sign_up_for_free"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/log_in"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/interface_button"
        android:elevation="20dp"
        android:fontFamily="@font/nikosh"
        android:letterSpacing=".05"
        android:padding="10dp"
        android:text="@string/log_in"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/sign_up"
        app:layout_constraintStart_toStartOf="@id/sign_up"
        app:layout_constraintTop_toBottomOf="@id/sign_up" />


</androidx.constraintlayout.widget.ConstraintLayout>