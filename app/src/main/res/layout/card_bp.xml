<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/round"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:paddingTop="7dp"
            android:src="@drawable/line"
            app:layout_constraintBottom_toBottomOf="@id/round"
            app:layout_constraintEnd_toEndOf="@id/round"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/round"
            app:layout_constraintTop_toTopOf="@id/round"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nikosh"
            android:text="120/"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/round"
            app:layout_constraintStart_toStartOf="@id/round"
            app:layout_constraintTop_toTopOf="@id/round" />

        <TextView
            android:id="@+id/dys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nikosh"
            android:text="80"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/round"
            app:layout_constraintStart_toStartOf="@id/round"
            app:layout_constraintTop_toBottomOf="@id/sys" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nikosh"
            android:padding="4dp"
            android:text="12/12/2024"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nikosh"
            android:padding="4dp"
            android:text="12.12pm"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>